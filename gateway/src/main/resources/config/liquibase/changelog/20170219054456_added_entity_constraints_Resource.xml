        <addForeignKeyConstraint baseColumnNames="lesson_id"
                                 baseTableName="resource"
                                 constraintName="fk_resource_lesson_id"
                                 referencedColumnNames="id"
                                 referencedTableName="lesson"/>

    </changeSet>
</databaseChangeLog>
